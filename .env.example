#############################################
# Flash Loan Arbitrage Bot Configuration
# Copy this file to `.env` and fill in values
#############################################

# --- Network ---
ARBITRUM_RPC_URL=
ARBITRUM_WEBSOCKET_URL=

# --- Runtime Mode ---
SCAN_ONLY=false
AUTO_EXECUTE=true

# --- Flashbots Protect (optional but recommended) ---
FLASHBOTS_RPC_URL=https://rpc.flashbots.net

# --- Wallet ---
# Private key of the executor wallet (never commit!).
PRIVATE_KEY=

# --- Contracts ---
# Address of the deployed flash-loan arbitrage contract.
ARBITRAGE_CONTRACT_ADDRESS=

# --- Execution Parameters ---
MIN_PROFIT_USD=150
MIN_PROFIT_MARGIN_PERCENT=0.6
MIN_LOAN_AMOUNT_USD=1000
MAX_LOAN_AMOUNT_USD=2000000
LOAN_STEP_USD=50000
MAX_GAS_PRICE_GWEI=2
GAS_LIMIT_MULTIPLIER=1.25
EXECUTION_DEADLINE_SECONDS=120
REVERIFY_TOLERANCE_BPS=25
MAX_SLIPPAGE_PERCENT=0.35

# --- Liquidity & Validation ---
MIN_LIQUIDITY_USD=5000000
MAX_PRICE_IMPACT_PERCENT=3
MAX_SPREAD_PERCENT=12

# --- Scanner ---
SCAN_INTERVAL_MS=120000
SCAN_BLOCK_LOOKBACK=0
MULTICALL_BATCH_SIZE=20
PRICE_CACHE_MS=500

# --- Telegram Alerts ---
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# --- Optional analytics ---
LOG_LEVEL=info
